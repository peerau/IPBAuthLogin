{
    "name": "mediawiki/ipb-auth-login",
    "type": "mediawiki-extension",
    "description": "Log into the MediaWiki installation using IPB user accounts.",
    "keywords": [
        "MediaWiki",
        "IPB",
        "IPS",
        "login",
        "authentication"
    ],
    "homepage": "https://www.mediawiki.org/wiki/Extension:IPBAuthLogin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Frédéric Hannes",
            "role": "Creator"
        },
        {
            "name": "Jordan Songer",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "composer/installers": "1.*,>=1.0.1",
        "oomphinc/composer-installers-extender": "^2.0"
    },
	"config": {
        "optimize-autoloader": true,
        "prepend-autoloader": false,
        "allow-plugins": {
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "extra": {
        "installer-paths": {
            "mediawiki/IPBAuthLogin": ["mediawiki/ipb-auth-login"]
        }
    }
}